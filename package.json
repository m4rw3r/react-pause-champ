{
  "name": "@m4rw3r/react-iso-state",
  "version": "0.0.1",
  "description": "Isomorphic async-aware state using React Suspense",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:d.ts && npm run build:js",
    "build:d.ts": "tsc --project tsconfig.build.json",
    "build:js": "node esbuild.js",
    "format": "prettier -w src",
    "format:check": "prettier -c src",
    "test": "jest",
    "test:watch:": "jest --watch"
  },
  "keywords": [
    "React",
    "isomorphic",
    "state",
    "async"
  ],
  "author": "Martin Wernst√•l <m4rw3r@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "esbuild": "^0.17.14",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  }

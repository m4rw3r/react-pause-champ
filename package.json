    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "ts-add-js-extension": "^1.6.6",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }

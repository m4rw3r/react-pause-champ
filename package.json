{
  "name": "@m4rw3r/react-pause-champ",
  "version": "0.1.2",
  "description": "Isomorphic React hook providing async-aware stateful variables to components, with Suspense and Server-Side-Rendering support",
  "type": "module",
  "exports": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "prebuild": "pnpm run clean",
    "build": "pnpm run build:d.ts && pnpm run build:js",
    "build:d.ts": "rollup -c",
    "build:js": "tsc --project tsconfig.build.json",
    "check": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf coverage dist",
    "dist": "pnpm run check && pnpm run test && pnpm run format:check && pnpm run build && pnpm run lint && pnpm run examples",
    "examples": "cd examples/vite-ssr && pnpm run dist",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prepack": "pnpm run dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "async",
    "hook",
    "isomorphic",
    "react",
    "react-hooks",
    "ssr",
    "state",
    "suspense"
  ],
  "author": "Martin Wernst√•l <m4rw3r@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m4rw3r/react-pause-champ"
  },
  "homepage": "https://github.com/m4rw3r/react-pause-champ",
  "files": [
    "dist/*"
  ],
  "engine": {
    "node": " >=14.13.1 || >=16.0.0",
    "pnpm": ">=3"
  },
  "peerDependencies": {
    "react": "^18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.3",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.29.4",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}

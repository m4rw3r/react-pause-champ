{
  "name": "@m4rw3r/react-pause-champ",
  "version": "0.2.5",
  "description": "Isomorphic React hook providing async-aware stateful variables to components, with Suspense and Server-Side-Rendering support",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "prepublish": "pnpm -C ../.. dist",
    "build": "pnpm run \"/^build:.*/\"",
    "build:d.ts": "rollup -c",
    "build:js": "tsc --project tsconfig.build.json && ts-add-js-extension --dir=dist",
    "build:README": "cp ../../README.md README.md",
    "check": "tsc --noEmit",
    "clean": "rm -rf coverage dist README.md",
    "test": "pnpm run --sequential \"/^test:.*/\"",
    "test:react18": "REACT_VERSION=18 jest",
    "test:react19": "REACT_VERSION=19 jest",
    "watch": "jest --watch"
  },
  "keywords": [
    "async",
    "hook",
    "isomorphic",
    "react",
    "react-hooks",
    "ssr",
    "state",
    "suspense"
  ],
  "author": "Martin Wernst√•l <m4rw3r@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m4rw3r/react-pause-champ"
  },
  "homepage": "https://github.com/m4rw3r/react-pause-champ",
  "files": [
    "dist/*",
    "internal/*",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./internal": {
      "types": "./dist/internal/index.d.ts",
      "import": "./dist/internal/index.js"
    }
  },
  "engine": {
    "node": " >=14.13.1 || >=16.0.0",
    "pnpm": ">=3"
  },
  "peerDependencies": {
    "react": "^18|^19"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react18": "npm:react@^18.3.1",
    "react18-dom": "npm:react-dom@^18.3.1",
    "react19": "npm:react@^19.0.0-rc.1",
    "react19-dom": "npm:react-dom@^19.0.0-rc.1"
  }
}

{
  "extends": "./tsconfig.json",
  "exclude": [
    "*.config.ts",
    "dist/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "module": "esnext",
    "target": "es2021",
    "outDir": "dist",
    "stripInternal": true,

    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true
  }
}

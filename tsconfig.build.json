{
  "extends": "./tsconfig.json",
  "exclude": [
    "*.config.ts",
    "dist/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true
  }
}
